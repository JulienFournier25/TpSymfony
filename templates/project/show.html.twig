{# templates/project/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ project.name }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ project.name }}</h1>

        <div class="project-details">
            <p>{{ project.description }}</p>

            <div class="row">
                <div class="col-md-6">
                    <h2>Details</h2>
                    <dl class="row">
                        <dt class="col-sm-4">Start Date</dt>
                        <dd class="col-sm-8">{{ project.startDate|date('Y-m-d') }}</dd>

                        {% if project.endDate %}
                            <dt class="col-sm-4">End Date</dt>
                            <dd class="col-sm-8">{{ project.endDate|date('Y-m-d') }}</dd>
                        {% endif %}

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">{{ project.createdAt|date('Y-m-d') }}</dd>

                        <dt class="col-sm-4">Last Updated</dt>
                        <dd class="col-sm-8">{{ project.updatedAt|date('Y-m-d') }}</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">{{ project.category }}</dd>
                    </dl>
                </div>

                {% if project.technologies|length %}
                    <div class="col-md-6">
                        <h2>Technologies</h2>
                        <ul>
                            {% for technology in project.technologies %}
                                <li>{{ technology.name }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            </div>
        </div>

        <a href="{{ path('app_home') }}" class="btn btn-secondary mt-3">Back to projects</a>
    </div>
{% endblock %}
